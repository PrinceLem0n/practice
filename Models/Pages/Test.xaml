<Page x:Class="Practic.Models.Pages.Test"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practic.Models.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Test" Loaded="Page_Loaded">
    <Grid Background="White">
        <ListView x:Name="ListView" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="400" Background="#121212" Foreground="White">
            <ListView.View>
                <GridView x:Name="grid">
                    <GridViewColumn Header="Название" Width="auto" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Категория" Width="auto" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="Место" Width="auto" DisplayMemberBinding="{Binding Memory}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
