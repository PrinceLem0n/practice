<Window x:Class="Practic.Models.Windows.EditCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic.Models.Windows"
        mc:Ignorable="d"
        Title="EditCategory" Height="170" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="Name_tb"  HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="200" FontSize="19"/>
        <Grid Height="40" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,105,0,0">
            <Button x:Name="Exit_btn" Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="90" Click="Exit_btn_Click"/>
            <Button x:Name="Edit_btn" Content="Изменить" HorizontalAlignment="Right" VerticalAlignment="Top" Height="40" Width="90" Click="Edit_btn_Click"/>
        </Grid>
    </Grid>
</Window>
